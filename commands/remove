#!/bin/bash

load inquirer

help() {
  echo "Usage:"
  echo "  zgvm remove"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  local version=$1

  if [ -z "$version" ]; then
    local availables=($(gvm::list))
    inquirer::select "Select ?" availables version
  fi

  if [ "$(gvm::current)" = "$version" ]; then
    local yesno=(No yes)
    inquirer::select "Select ?" yesno confirm
    if [ "$confirm" = "No" ]; then
      exit 0
    fi
  fi

  gvm::remove $version

  log::success "remove ${version} success"

  if [ -n "$(gvm::current)" ]; then
    echo "current: $(gvm::current) ($(go version))"
  fi
}

run() {
  core $@
}

run $@
